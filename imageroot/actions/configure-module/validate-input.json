{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configure copyparty",
  "$id": "Copyparty",
  "description": "Configure copyparty",
  "examples": [
    {
      "username": "copyparty",
      "password": "secret",
      "http_port": 3923
    }
  ],
  "type": "object",
  "required": [
    "username",
    "password",
    "http_port"
  ],
  "properties": {
    "username": {
      "type": [
        "string",
        "null"
      ],
      "description": "Default username for copyparty user, it can be changed later"
    },
    "password": {
      "type": "string",
      "description": "Default password for copyparty user, it can be changed later"
    },
    "http_port": {
      "type": "integer",
      "title": "port",
      "description": "The port of the http service",
      "minimum": 1024,
      "maximum": 65535
    }
  }
}
